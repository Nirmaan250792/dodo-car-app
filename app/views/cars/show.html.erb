<section class="car-show-body">
  <div class="container">
    <div class="row mb-2">
      <div class="col-12 col-sm-8 col-md-4 offset-sm-2 offset-md-4">
          <div class="card mt-5 ">
            <div class="card-booking">
              <h3>Car brand : <%= @car.brand %></h3>
                <p>Car Model : <%= @car.model %></p>
                <p>Year of Production : <%= @car.year_of_production %></p>
                <p>Owner's address : <%= @car.address %></p>
                <p>Price per day : Rs. <%= @car.price_per_day %></p>
            </div>

            <div class="form p-3">
              <%=  render "form", cars: @cars %>
            </div>
            <%= link_to "Back to list of cars", cars_path,  class: "btn btn__loadMore" %>
          </div>
      </div>
    </div>
  </div>
</section>
